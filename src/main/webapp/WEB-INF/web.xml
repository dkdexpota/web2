<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>exserv</servlet-name>
        <servlet-class>com.example.dd.ExServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exserv</servlet-name>
        <url-pattern>/exserv</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>treatment</servlet-name>
        <servlet-class>com.example.dd.TreatmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>treatment</servlet-name>
        <url-pattern>/treatment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>checkarea</servlet-name>
        <servlet-class>com.example.dd.CheckAreaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkarea</servlet-name>
        <url-pattern>/checkarea</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>clear</servlet-name>
        <servlet-class>com.example.dd.ClearTable</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clear</servlet-name>
        <url-pattern>/clear</url-pattern>
    </servlet-mapping>
</web-app>